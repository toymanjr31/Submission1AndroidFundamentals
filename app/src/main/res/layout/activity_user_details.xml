<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetails">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar_detail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="26dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF909090"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/img_avatar_detail"
        android:text="@string/name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_username_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_detail"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:maxLines="3"
        android:text="@string/username"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_company_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_username_detail"
        android:layout_marginRight="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:maxLines="3"
        android:text="@string/company"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_location_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_company_detail"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:maxLines="3"
        android:text="@string/location"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_share"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_location_detail"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:text="@string/share"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_repo_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/btn_share"
        android:text="@string/repo"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_repository_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tv_repo_detail"
        android:text="@string/repository"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_flwrs_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/btn_share"
        android:text="@string/flwrs"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_followers_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tv_flwrs_detail"
        android:text="@string/followers"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_flwng_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/btn_share"
        android:text="@string/flwng"
        android:textSize="18sp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_following_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/tv_flwng_detail"
        android:text="@string/following"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>